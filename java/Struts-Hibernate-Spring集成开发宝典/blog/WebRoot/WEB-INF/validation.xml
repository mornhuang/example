<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE form-validation PUBLIC "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN" "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>
  <!--
    Define global validation config in validation-global.xml
  -->
  <formset>
  <!--
    Define form validation config in validation-forms.xml
  -->

      <form name="logonForm">
              <field property="username"
                     depends="required">

                  <arg0 key="logon.username"/>
              </field>
              <field property="password"
                     depends="required">

                  <arg0 key="logon.password"/>
              </field>
      </form>

      <form name="registForm">
              <field property="username"
                     depends="required">

                  <arg0 key="logon.username"/>
              </field>
              <field property="password"
                     depends="required">

                  <arg0 key="logon.password"/>
              </field>
              <field property="repassword"
                     depends="required,validwhen">

                  <arg position="0" key="regist.repassword"/>
                  <arg position="1" key="logon.password"/>
                  <msg name="validwhen" key="error.password.match" />
                  <var>
                  	<var-name>test</var-name>
                  	<var-value>(*this* == password)</var-value>
                  </var>
              </field>
      </form>      
 
       <form name="messageForm">
              <field property="title"
                     depends="required">

                  <arg0 key="message.title"/>
              </field>
              <field property="content"
                     depends="required">

                  <arg0 key="message.content"/>
              </field>
      </form>
           
  </formset>
</form-validation>
